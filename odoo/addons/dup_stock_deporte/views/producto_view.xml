<odoo>
    <record id="view_producto_form" model="ir.ui.view">
        <field name="name">producto.form</field>
        <field name="model">dup_stock_deporte.producto</field>
        <field name="arch" type="xml">
            <form string="Producto">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="descripcion"/>
                        <field name="precio"/>
                        <field name="stock"/>
                        <field name="categoria_id"/>
                        <field name="proveedor_id"/>
                        <field name="image" widget="image" class="oe_avatar"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_producto_tree" model="ir.ui.view">
        <field name="name">producto.tree</field>
        <field name="model">dup_stock_deporte.producto</field>
        <field name="arch" type="xml">
            <tree string="Productos">
                <field name="name"/>
                <field name="precio"/>
                <field name="stock"/>
                <field name="categoria_id"/>
                <field name="proveedor_id"/>
            </tree>
        </field>
    </record>
</odoo>
